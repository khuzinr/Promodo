<Window x:Class="PomodoroTimer.MonthlyStatsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Статистика по неделям"
        Width="460"
        Height="420"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource BackgroundBrush}"
        Foreground="{StaticResource TextBrush}">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
            <TextBlock Text="Месяц:" VerticalAlignment="Center" Margin="0,0,8,0"/>
            <DatePicker x:Name="MonthPicker"
                        SelectedDateChanged="MonthPicker_SelectedDateChanged"/>
        </StackPanel>

        <DataGrid x:Name="WeekGrid"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  HeadersVisibility="Column"
                  Background="{StaticResource BackgroundBrush}"
                  Foreground="{StaticResource TextBrush}"
                  GridLinesVisibility="Vertical"
                  BorderThickness="1"
                  BorderBrush="{StaticResource SubtleTextBrush}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Неделя" Binding="{Binding WeekLabel}" Width="*"/>
                <DataGridTextColumn Header="Работа" Binding="{Binding WorkDisplay}" Width="*"/>
                <DataGridTextColumn Header="Отдых" Binding="{Binding RestDisplay}" Width="*"/>
                <DataGridTextColumn Header="Всего" Binding="{Binding TotalDisplay}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <TextBlock x:Name="SummaryText"
                   Grid.Row="2"
                   Margin="0,8,0,0"
                   FontWeight="SemiBold"
                   Text="Нет данных"
                   HorizontalAlignment="Right"/>
    </Grid>
</Window>
