<Window x:Class="PomodoroTimer.PresetWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Preset"
        Width="260"
        Height="220"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource BackgroundBrush}"
        Foreground="{DynamicResource TextBrush}">
    
    <Grid Margin="12" Background="{DynamicResource BackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Name -->
        <StackPanel Grid.Row="0" Margin="0,0,0,8">
            <TextBlock Text="Name"
                       Margin="0,0,0,2"
                       Foreground="{DynamicResource SubtleTextBrush}" />
            <TextBox x:Name="NameBox"/>
        </StackPanel>

        <!-- Work / Rest -->
        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    Margin="0,0,0,8">
            <StackPanel Width="100" Margin="0,0,8,0">
                <TextBlock Text="Work (min)"
                           Margin="0,0,0,2"
                           Foreground="{DynamicResource SubtleTextBrush}"/>
                <TextBox x:Name="WorkBox"/>
            </StackPanel>
            <StackPanel Width="100">
                <TextBlock Text="Rest (min)"
                           Margin="0,0,0,2"
                           Foreground="{DynamicResource SubtleTextBrush}"/>
                <TextBox x:Name="RestBox"/>
            </StackPanel>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,4,0,0">
            <Button x:Name="OkButton"
                    Content="OK"
                    Width="80"
                    Click="Ok_Click"/>
            <Button Content="Cancel"
                    Width="80"
                    IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
