<Window x:Class="PomodoroTimer.StatsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Statistics"
        Width="420"
        Height="520"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanMinimize"
        Background="{DynamicResource BackgroundBrush}"
        Foreground="{DynamicResource TextBrush}">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes/DarkTheme.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Background="{DynamicResource BackgroundBrush}" Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal"
                    Grid.Row="0"
                    Margin="0,0,0,12"
                    VerticalAlignment="Center">
            <TextBlock Text="Weekly statistics"
                       FontSize="20"
                       FontWeight="Bold" />
            <Border Background="{StaticResource CardBrush}"
                    BorderBrush="{StaticResource BorderBrushColor}"
                    BorderThickness="1"
                    CornerRadius="4"
                    Padding="6,2"
                    Margin="12,0,0,0"
                    ToolTip="Shows completed pomodoros for each day of the current week.">
                <StackPanel Orientation="Horizontal"
                            VerticalAlignment="Center">
                    <TextBlock Text="Today is "
                               Foreground="{StaticResource SubtleTextBrush}" />
                    <TextBlock Text="{Binding TodayLabel}" />
                </StackPanel>
            </Border>
        </StackPanel>

        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding DailyStats}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="{StaticResource CardBrush}"
                                BorderBrush="{StaticResource BorderBrushColor}"
                                BorderThickness="1"
                                CornerRadius="6"
                                Padding="12"
                                Margin="0,0,0,10"
                                ToolTip="{Binding Tooltip}">
                            <StackPanel>
                                <TextBlock Text="{Binding DayLabel}"
                                           FontSize="14"
                                           FontWeight="SemiBold" />
                                <StackPanel Orientation="Horizontal"
                                            Margin="0,6,0,0">
                                    <TextBlock Text="Pomodoros:"
                                               Foreground="{StaticResource SubtleTextBrush}" />
                                    <TextBlock Text="{Binding Pomodoros}"
                                               Margin="6,0,0,0" />
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Minutes:"
                                               Foreground="{StaticResource SubtleTextBrush}" />
                                    <TextBlock Text="{Binding TotalMinutes, StringFormat={}{0:0}}"
                                               Margin="6,0,0,0" />
                                </StackPanel>
                                <ProgressBar Minimum="0"
                                             Maximum="{Binding DataContext.MaxMinutes, RelativeSource={RelativeSource AncestorType=Window}}"
                                             Value="{Binding TotalMinutes}"
                                             Height="6"
                                             Margin="0,10,0,0" />
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,12,0,0">
            <TextBlock Text="Ctrl+Alt+S"
                       FontWeight="SemiBold" />
            <TextBlock Text=" â€” open statistics"
                       Margin="6,0,0,0"
                       Foreground="{StaticResource SubtleTextBrush}" />
        </StackPanel>
    </Grid>
</Window>
