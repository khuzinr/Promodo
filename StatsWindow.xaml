<Window x:Class="PomodoroTimer.StatsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ctrl="clr-namespace:PomodoroTimer.Controls"
        Title="Статистика по неделям"
        Width="960"
        Height="560"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource BackgroundBrush}"
        Foreground="{DynamicResource TextBrush}"
        FontFamily="Segoe UI"
        FontSize="13">
    <Grid Margin="12">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <GroupBox Header="Гистограмма выбранных дней"
                  Grid.Column="0"
                  Margin="0,0,12,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock x:Name="SelectionInfoText"
                           Grid.Row="0"
                           Margin="0,0,0,10"
                           Foreground="{StaticResource SubtleTextBrush}"
                           TextWrapping="Wrap"
                           Text="Выберите дни на календаре справа, чтобы увидеть статистику."/>

                <ctrl:MultiDayChartControl x:Name="MultiDayChart"
                                           Grid.Row="1"
                                           MinHeight="320"/>

                <ItemsControl x:Name="TypeBreakdownList"
                              Grid.Row="2"
                              Margin="0,10,0,0">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="0,2">
                                <Border Width="14"
                                        Height="14"
                                        Margin="0,0,8,0"
                                        CornerRadius="3">
                                    <Border.Background>
                                        <SolidColorBrush Color="{Binding Color}"/>
                                    </Border.Background>
                                </Border>
                                <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                                <TextBlock Text=" — " />
                                <TextBlock Text="{Binding MinutesFormatted}"/>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </GroupBox>

        <GroupBox Header="Календарь выбора дней"
                  Grid.Column="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Button Content="◀"
                            Grid.Column="0"
                            Width="36"
                            Click="PrevMonth_Click"/>
                    <TextBlock x:Name="MonthText"
                               Grid.Column="1"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontWeight="Bold"
                               FontSize="16"/>
                    <Button Content="▶"
                            Grid.Column="2"
                            Width="36"
                            Click="NextMonth_Click"/>
                </Grid>

                <UniformGrid Grid.Row="1"
                             Columns="7"
                             Margin="0,10,0,4">
                    <TextBlock Text="Пн" HorizontalAlignment="Center" Foreground="{StaticResource SubtleTextBrush}"/>
                    <TextBlock Text="Вт" HorizontalAlignment="Center" Foreground="{StaticResource SubtleTextBrush}"/>
                    <TextBlock Text="Ср" HorizontalAlignment="Center" Foreground="{StaticResource SubtleTextBrush}"/>
                    <TextBlock Text="Чт" HorizontalAlignment="Center" Foreground="{StaticResource SubtleTextBrush}"/>
                    <TextBlock Text="Пт" HorizontalAlignment="Center" Foreground="{StaticResource SubtleTextBrush}"/>
                    <TextBlock Text="Сб" HorizontalAlignment="Center" Foreground="{StaticResource SubtleTextBrush}"/>
                    <TextBlock Text="Вс" HorizontalAlignment="Center" Foreground="{StaticResource SubtleTextBrush}"/>
                </UniformGrid>

                <UniformGrid x:Name="CalendarUniformGrid"
                             Grid.Row="2"
                             Columns="7"
                             Rows="6"
                             Margin="0,0,0,8"/>

                <TextBlock Grid.Row="3"
                           TextWrapping="Wrap"
                           Foreground="{StaticResource SubtleTextBrush}"
                           Text="Подсказка: зажмите левую кнопку мыши и протяните горизонтально или вертикально, чтобы выделить нужный отрезок дней. Удерживайте Shift и кликайте, чтобы добавить или убрать отдельные даты."/>
            </Grid>
        </GroupBox>
    </Grid>
</Window>
